<table summary="Information about following/followers">
  <tr>
    <td class="main">
      <h1><%= @title %></h1>

      <% unless @users.empty? %>
        <ul class="users">
          <%= render @users %>
        </ul>
        <%= will_paginate @users %>
      <% end %>
    </td>
    <td class="sidebar round">
      <strong>Name</strong><br> <%= @user.name %><br><br>
      <!--<strong>URL</strong>  <%= link_to user_path(@user), @user %><br />-->
	    <strong>Total tweets</strong><br> <%= @user.microposts.count %> <br><br>
      <%= render 'shared/stats' %>
      <hr>
      <% unless @users.empty? %>
        <% @users.each do |user| %>
          <%= link_to gravatar_for(user, :size => 30), user %>
        <% end %>
      <% end %>
    </td>
  </tr>
</table>